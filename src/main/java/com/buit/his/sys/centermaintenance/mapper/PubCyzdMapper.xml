<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 公用_个人常用诊断表 -->
<mapper namespace="com.buit.his.sys.centermaintenance.dao.PubCyzdDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLBH as jlbh,SSLB as sslb,YGDM as ygdm,ZDXH as zdxh,ZDMC as zdmc,ICD10 as icd10,PYDM as pydm,JGID as jgid,KSDM as ksdm,CFLX as cflx,WBDM as wbdm,CDMZZD as cdmzzd
    </sql>

    <insert id="insert">
        INSERT INTO PUB_CYZD (
            JLBH ,
            SSLB ,
            YGDM ,
            ZDXH ,
            ZDMC ,
            ICD10 ,
            PYDM ,
            JGID ,
            KSDM ,
            CFLX ,
            WBDM ,
            CDMZZD 
        ) VALUES (
            #{jlbh} ,
            #{sslb} ,
            #{ygdm} ,
            #{zdxh} ,
            #{zdmc} ,
            #{icd10} ,
            #{pydm} ,
            #{jgid} ,
            #{ksdm} ,
            #{cflx} ,
            #{wbdm} ,
            #{cdmzzd} 
        )
    </insert>
    
    <update id="update" ><!--  
        UPDATE PUB_CYZD SET
            SSLB = #{sslb} ,
            YGDM = #{ygdm} ,
            ZDXH = #{zdxh} ,
            ZDMC = #{zdmc} ,
            ICD10 = #{icd10} ,
            PYDM = #{pydm} ,
            JGID = #{jgid} ,
            KSDM = #{ksdm} ,
            CFLX = #{cflx} ,
            WBDM = #{wbdm} ,
            CDMZZD = #{cdmzzd} 
        WHERE 
            JLBH = #{jlbh} 
            -->            
    </update>

    <delete id="deleteById">
        DELETE FROM PUB_CYZD WHERE
        JLBH = #{jlbh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM PUB_CYZD <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="PubCyzd">
        SELECT <include refid="columns" />
            FROM PUB_CYZD 
            WHERE 
        JLBH = #{jlbh} 
    </select>
    
    <sql id="where">
        <where>                          
