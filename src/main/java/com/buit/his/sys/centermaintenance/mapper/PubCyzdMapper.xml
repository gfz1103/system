    <select id="findByEntityCount" resultType="Integer">
        SELECT count(*) FROM PUB_CYZD 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="PubCyzd">
        SELECT <include refid="columns" />
        FROM PUB_CYZD 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
    <select id="query" resultType="IPubCyzdResp">
        SELECT
            cyzd.jlbh AS jlbh,
            cyzd.sslb AS sslb,
            cyzd.ygdm AS ygdm,
            cyzd.ksdm AS ksdm,
            cyzd.zdmc AS zdmc,
            cyzd.zdxh AS zdxh,
            cyzd.icd10 AS icd10,
            cyzd.pydm AS pydm,
            cyzd.wbdm AS wbdm,
            cyzd.jgid AS jgid,
            cyzd.cflx AS cflx,
            cyzd.cdmzzd AS cdmzzd
        FROM
            PUB_CYZD cyzd
        WHERE
            cyzd.JGID = #{jgid}
            AND cyzd.YGDM = #{ygdm}
            <if test="@sqlt.Ognl@isNotEmpty(cflx)">
                AND cyzd.CFLX = #{cflx}
            </if>
            <if test="@sqlt.Ognl@isNotEmpty(sslb)">
                AND cyzd.SSLB = #{sslb}
            </if>
            <if test="@sqlt.Ognl@isNotEmpty(pydm)">
                AND cyzd.PYDM like CONCAT(CONCAT('%',UPPER(#{pydm})),'%')
            </if>
        ORDER BY
            cyzd.JLBH DESC
    </select>
</mapper>

