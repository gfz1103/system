<!--                </if> -->
<!--                <if test="@sqlt.Ognl@isNotEmpty(icd10)"> -->
<!--                     AND ICD10 = #{icd10} -->
<!--                </if> -->
<!--                <if test="@sqlt.Ognl@isNotEmpty(pydm)"> -->
<!--                     AND PYDM = #{pydm} -->
<!--                </if> -->
                <if test="@sqlt.Ognl@isNotEmpty(jgid)">
                     AND JGID = #{jgid}
                </if>
<!--                <if test="@sqlt.Ognl@isNotEmpty(ksdm)"> -->
<!--                     AND KSDM = #{ksdm} -->
<!--                </if> -->
                <if test="@sqlt.Ognl@isNotEmpty(cflx)">
                     AND CFLX = #{cflx}
                </if>
