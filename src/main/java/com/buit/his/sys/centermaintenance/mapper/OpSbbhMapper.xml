    <insert id="insert">
        INSERT INTO OP_SBBH (
            BHID ,
            SBBH ,
            SBMC ,
            JKLX ,
            YYZS ,
            SWKSSJ ,
            SWJSSJ ,
            SWJGFZ ,
            XWKSSJ ,
            XWJSSJ ,
            XWJGFZ ,
            SBDZ ,
            MZSY ,
            ZYSY ,
            TJSY 
        ) VALUES (
            #{bhid} ,
            #{sbbh} ,
            #{sbmc} ,
            #{jklx} ,
            #{yyzs} ,
            #{swkssj} ,
            #{swjssj} ,
            #{swjgfz} ,
            #{xwkssj} ,
            #{xwjssj} ,
            #{xwjgfz} ,
            #{sbdz} ,
            #{mzsy} ,
            #{zysy} ,
            #{tjsy} 
        )
    </insert>
    
    <update id="update" >
        UPDATE OP_SBBH SET
