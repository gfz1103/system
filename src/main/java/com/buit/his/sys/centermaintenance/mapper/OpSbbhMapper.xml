            XWKSSJ = #{xwkssj} ,
            XWJSSJ = #{xwjssj} ,
            XWJGFZ = #{xwjgfz} ,
            SBDZ = #{sbdz} ,
            MZSY = #{mzsy} ,
            ZYSY = #{zysy} ,
            TJSY = #{tjsy} 
        WHERE 
            BHID = #{bhid}           
    </update>

    <delete id="deleteById">
        DELETE FROM OP_SBBH WHERE
        BHID = #{bhid} 
    </delete>
    
    <delete id="removeByEntity">
