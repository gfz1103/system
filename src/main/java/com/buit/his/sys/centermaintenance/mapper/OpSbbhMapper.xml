    <!--     业务sql      -->
    <select id="getJklx" resultType="java.util.Map">
        SELECT
            a.jklx,
            (
            CASE

                    WHEN a.JKLX = 1 THEN
                    'CT'
                    WHEN a.JKLX = 2 THEN
                    'MRI'
                    WHEN a.JKLX = 3 THEN
                    'X线检查'
                    WHEN a.JKLX = 4 THEN
                    '钼靶'
                    WHEN a.JKLX = 5 THEN
                    '动态心电'
                    WHEN a.JKLX = 10 THEN
                    '超声'
                    WHEN a.JKLX = 20 THEN
                    '内镜'
                END
                ) AS jklx_text,
                count( a.bhid ) AS count
            FROM
                OP_SBBH a
            GROUP BY
                a.JKLX
        ORDER BY
            a.JKLX
    </select>
